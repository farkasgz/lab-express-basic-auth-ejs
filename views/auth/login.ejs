<h1>Login</h1>

<form action="/auth/login" method="POST">
  <label>
    E-Mail
    <input name="username" required/>
  </label>
  <label>
    Password
    <input name="password" type="password" required />
  </label>
  <button type="submit">Login</button>
</form>

<% if (typeof errorMessage !== 'undefined') { %>
  <p style="color: red"><%= errorMessage %></p>
<% } %>